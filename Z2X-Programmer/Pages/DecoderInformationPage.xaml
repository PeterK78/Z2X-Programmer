<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Z2XProgrammer.Pages.DecoderInformationPage"
             xmlns:converter="clr-namespace:Z2XProgrammer.Converter"
             xmlns:strings="clr-namespace:Z2XProgrammer.Resources.Strings"
             xmlns:viewmodel="clr-namespace:Z2XProgrammer.ViewModel"
             x:DataType="viewmodel:DecoderInformationViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource AppBackground_Light}, Dark={StaticResource AppBackground_Dark}}"
             Style="{StaticResource Z2XProgrammerContentPageStyle}"
             Title="{x:Static strings:AppResources.FlyoutItemDecoderInformationText}">

    <ContentPage.Resources>
        <converter:InverseBooleanConverter x:Key="boolInvert" />
    </ContentPage.Resources>

    <ScrollView x:Name="PageScrollView" Orientation="Vertical" Padding="0,0,20,0">

        <VerticalStackLayout>

            <!-- Page Title -->
            <HorizontalStackLayout>
                <Image Source="{AppThemeBinding Light=ic_fluent_info_24_regular.png, Dark=ic_fluent_info_24_dark.png}" Margin="0,0,10,0" ></Image>
                <Label Style="{StaticResource Z2XProgrammerLabelHeading1Style}" Text="{x:Static strings:AppResources.FlyoutItemDecoderInformationText}" VerticalOptions="Center"  HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <!-- No data available information -->
            <HorizontalStackLayout IsVisible="{Binding Path=DataStoreDataValid,Converter={StaticResource boolInvert}}" Margin="0,20,0,20" >
                <Image Source="{AppThemeBinding Light=ic_fluent_info_24_regular.png, Dark=ic_fluent_info_24_dark.png}" WidthRequest="24" Margin="0,0,20,0" ></Image>
                <Label Style="{StaticResource Z2XProgrammerLabelStandardStyle}" Text="{x:Static strings:AppResources.AlertNoInformationAvailable}" VerticalOptions="Center"  HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <!-- Page sheet content -->
            <VerticalStackLayout IsVisible="{Binding DataStoreDataValid}">

                <!-- Generic decoder information like manufacturer and version -->
                <Label Style="{StaticResource Z2XProgrammerLabelHeading2Style}" Text="{x:Static strings:AppResources.FrameGenericDecoderInformationTitle}" VerticalOptions="Center"  HorizontalOptions="Start" />
                <Border Style="{StaticResource Z2XBorderFrame}">
                    <VerticalStackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            
                            <!-- The icon of the widget in row 0, column 0 -->
                            <Image Margin="0,0,0,0" Grid.Row="0" Grid.Column="0" Source="{AppThemeBinding Light=ic_fluent_contact_card_24_regular.png, Dark=ic_fluent_contact_card_24_dark.png}" HorizontalOptions="Start" VerticalOptions="Start" HeightRequest="24"></Image>

	                        <!-- The description of the widget in row 0, column 1 -->
                            <Label Margin="0,0,0,20"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Z2XProgrammerLabelStandardStyle}"  Text="{x:Static strings:AppResources.FrameDecoderSpecificationDescription}" VerticalOptions="Start"  HorizontalOptions="Start" LineBreakMode="WordWrap"/>

                            <!-- RCN225: Manufacturer  -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="FrameGenericDecoderInformationManufacturer" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameGenericDecoderInformationManufacturer}" VerticalOptions="Center"  HorizontalOptions="Start" />
                                <VerticalStackLayout HorizontalOptions="Start" >
                                    <Label Text="{Binding Manufacturer}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" ToolTipProperties.Text="{Binding ManufacturerID }" VerticalOptions="Center">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding Manufacturer}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV8Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>
                            </FlexLayout>

                            <!-- RCN225: Software version  -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="FrameGenericDecoderInformationVersionNumber" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameGenericDecoderInformationVersionNumber}" VerticalOptions="Center"  HorizontalOptions="Start" />
                                <VerticalStackLayout HorizontalOptions="Start">
                                    <Label Text="{Binding Version}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center" HorizontalOptions="End" />
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV7Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>
                            </FlexLayout>

                            <!-- ZIMO: Decoder type (ZIMO_DECODERTYPE_CV250) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="3" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="FrameDecoderZIMOInfoDecoderType" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameDecoderZIMOInfoDecoderType}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_DECODERTYPE_CV250}" />
                                <VerticalStackLayout HorizontalOptions="Start" IsVisible="{Binding ZIMO_DECODERTYPE_CV250}">
                                    <Label Text="{Binding ZimoDecoderType}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center"  HorizontalOptions="End">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding ZimoDecoderType}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV250Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="End" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>

                            </FlexLayout>

                            <!-- ZIMO: Software version (ZIMO_SUBVERSIONNR_CV65) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="4" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="FrameDecoderZIMOInfoSWVersion"  Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameDecoderZIMOInfoSWVersion}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_SUBVERSIONNR_CV65}" />
                                <VerticalStackLayout IsVisible="{Binding ZIMO_SUBVERSIONNR_CV65}" VerticalOptions="Center"  HorizontalOptions="Start"  >
                                    <Label Text="{Binding ZimoSWVersion}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center"  HorizontalOptions="End">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding ZimoSWVersion}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV65and7Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>

                            </FlexLayout>

                            <!-- ZIMO: Decoder ID (ZIMO_DECODERID_CV25X) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="5" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Label x:Name="FrameDecoderZIMOInfoDecoderID" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameDecoderZIMOInfoDecoderID}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_DECODERID_CV25X}" />
                                <VerticalStackLayout VerticalOptions="Center"  HorizontalOptions="Start"  IsVisible="{Binding ZIMO_DECODERID_CV25X}">
                                    <Label Text="{Binding ZimoDecoderID}"  Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center"  HorizontalOptions="End">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding ZimoDecoderID}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CVDecoderIDConfiguration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>

                            </FlexLayout>

                            <!-- ZIMO: Bootloader version (ZIMO_BOOTLOADER_VERSION_24X) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="6" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <VerticalStackLayout  IsVisible="{Binding ZIMO_BOOTLOADER_VERSION_24X}" HorizontalOptions="Start" >
                                    <Label x:Name="FrameDecoderZIMOInfoBootloaderVersion" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameDecoderZIMOInfoBootloaderVersion}" VerticalOptions="Center"  HorizontalOptions="Start"/>
                                    <Label Margin="0,10,0,0"  Style="{StaticResource Z2XProgrammerLabelStandardStyle}" IsVisible="{Binding Path=ZimoBootloaderIsFailSafe,Converter={StaticResource boolInvert}}" Text="{x:Static strings:AppResources.ZIMOBootloaderNotFailSafe}"  VerticalOptions="Center"  HorizontalOptions="Start" TextColor="Red" />
                                    <Label Margin="0,10,0,0"  Style="{StaticResource Z2XProgrammerLabelStandardStyle}" IsVisible="{Binding ZimoBootloaderIsFailSafe}" Text="{x:Static strings:AppResources.ZIMOBootloaderIsFailSafe}" VerticalOptions="Center"  HorizontalOptions="Start" TextColor="Green"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout  VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_BOOTLOADER_VERSION_24X}" >
                                    <Label Text="{Binding ZimoBootloaderVersion}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center"  HorizontalOptions="End">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding ZimoBootloaderVersion}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CVBootloaderVersionConfiguration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>

                            </FlexLayout>

                            <!-- ZIMO: Sound project manufacturer information (ZIMO_SOUNDPROJECTMANUFACTURER_CV105X) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="7" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="FrameDecoderZIMOInfoSoundManufacturer"  Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameDecoderZIMOInfoSoundManufacturer}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_SOUNDPROJECTMANUFACTURER_CV105X}" />
                                <VerticalStackLayout VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_SOUNDPROJECTMANUFACTURER_CV105X}">
                                    <Label Text="{Binding ZimoSoundProjectManufacturer}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center"  HorizontalOptions="Start">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding ZimoSoundProjectManufacturer}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV105XConfiguraion}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="End" HorizontalTextAlignment="End"></Label>
                                </VerticalStackLayout>

                            </FlexLayout>

                            <!-- ZIMO: Sound project version information (ZIMO_SOUNDPROJECTVERSIONINFO_CV25X) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="8" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeHorizontal -->
                                        <VisualState x:Name="LandscapeHorizontal">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="950"/>
                                                <OrientationStateTrigger Orientation="Landscape" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Row" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="FrameDecoderZIMOInfoSoundProjectNr"  Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameDecoderZIMOInfoSoundProjectNr}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_SOUNDPROJECTVERSIONINFO_CV25X}" />
                                <VerticalStackLayout VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding ZIMO_SOUNDPROJECTVERSIONINFO_CV25X}">
                                    <Label  Text="{Binding ZimoSoundProjectNumber}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" VerticalOptions="Center"  HorizontalOptions="End">
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem IconImageSource="{AppThemeBinding Light=ic_fluent_clipboard_paste_24_regular.png, Dark=ic_fluent_clipboard_paste_24_dark.png}" Text="{x:Static strings:AppResources.FrameDecoderCopyClipboard}" Command="{Binding CopyTextClipboardCommand}" CommandParameter="{Binding ZimoSoundProjectNumber}"/>
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                    </Label>
                                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV25XConfiguration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                                </VerticalStackLayout>

                            </FlexLayout>

                            <!-- Doehler & Haass: Decoder type (DOEHLERANDHAAS_DECODERTYPE_CV261) -->
                            <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Grid.Row="3" Grid.Column="1" Margin="0,10,0,0" HorizontalOptions="End">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>

                                        <!-- Portrait -->
                                        <VisualState x:Name="Portrait">
                                            <VisualState.StateTriggers>
                                                <OrientationStateTrigger Orientation="Portrait" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- LandscapeVertical -->
                                        <VisualState x:Name="LandscapeVertical">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="0"/>
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Direction" Value="Column" />
                                            </VisualState.Setters>
