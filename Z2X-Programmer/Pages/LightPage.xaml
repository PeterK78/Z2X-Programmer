<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Z2XProgrammer.Pages.LightPage"
              xmlns:strings="clr-namespace:Z2XProgrammer.Resources.Strings"
             xmlns:viewmodel="clr-namespace:Z2XProgrammer.ViewModel"
             xmlns:converter="clr-namespace:Z2XProgrammer.Converter"
             x:DataType="viewmodel:LightViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource AppBackground_Light}, Dark={StaticResource AppBackground_Dark}}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Padding="40,40,5,20"
             Title="{x:Static strings:AppResources.FlyoutItemLightText}">

    <ContentPage.Resources>
        <converter:InverseBooleanConverter x:Key="boolInvert" />
        <converter:SwitchStateToTextConverter x:Key="switchStateConverter" />
    </ContentPage.Resources>

    <ScrollView x:Name="PageScrollView" Orientation="Vertical" Padding="0,0,20,0">
        <VerticalStackLayout>

            <!-- Page Title -->
            <HorizontalStackLayout>
                <Image Source="{AppThemeBinding Light=ic_fluent_lightbulb_24_regular.png, Dark=ic_fluent_lightbulb_24_dark.png}" Margin="0,0,10,0" ></Image>
                <Label Style="{StaticResource Z2XProgrammerLabelHeading1Style}" Text="{x:Static strings:AppResources.FlyoutItemLightText}" VerticalOptions="Center"  HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <!-- No data available information -->
            <HorizontalStackLayout IsVisible="{Binding Path=DataStoreDataValid,Converter={StaticResource boolInvert}}" Margin="0,20,0,20" >
                <Image Source="{AppThemeBinding Light=ic_fluent_info_24_regular.png, Dark=ic_fluent_info_24_dark.png}" WidthRequest="24" Margin="0,0,20,0" ></Image>
                <Label Style="{StaticResource Z2XProgrammerLabelStandardStyle}" Text="{x:Static strings:AppResources.AlertNoInformationAvailable}" VerticalOptions="Center"  HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <!-- The selected decoder does not support any of the settings provided on this page  -->
            <HorizontalStackLayout IsVisible="{Binding Path=AnyDecoderFeatureAvailable,Converter={StaticResource boolInvert}}" Margin="0,20,0,20" >
                <Image Source="{AppThemeBinding Light=ic_fluent_info_24_regular.png, Dark=ic_fluent_info_24_dark.png}" WidthRequest="24" Margin="0,0,20,0" ></Image>
                <Label Style="{StaticResource Z2XProgrammerLabelStandardStyle}" Text="{x:Static strings:AppResources.AlertNoFeatureSupported}" VerticalOptions="Center"  HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <!-- Page sheet content -->
            <VerticalStackLayout IsVisible="{Binding DataStoreDataValid}">

            <!-- ZIMO: Light dimming in CV60 (ZIMO_LIGHT_DIM_CV60) -->
            <Label IsVisible="{Binding ZIMO_LIGHT_DIM_CV60}" Style="{StaticResource Z2XProgrammerLabelHeading2Style}" Text="{x:Static strings:AppResources.FrameLightDimmingTitle}" VerticalOptions="Center"  HorizontalOptions="Start" />
            <Border Style="{StaticResource Z2XBorderFrame}" IsVisible="{Binding ZIMO_LIGHT_DIM_CV60}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                         
                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,100,20" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" Text="{x:Static strings:AppResources.FrameLightDimmingDescription}" VerticalOptions="Center"  HorizontalOptions="Start" />

                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightDimmingEnabled}" VerticalOptions="Center"  HorizontalOptions="Start" />
                <VerticalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="End">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingEnabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingEnabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV60Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightDimmingMasterValue}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" Margin="0,0,0,20" />
                <VerticalStackLayout Grid.Row="2" Grid.Column="1"  HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}" Margin="0,0,0,20">
                    <HorizontalStackLayout  >
                        <Slider Value="{Binding Brightness}" WidthRequest="300" Maximum="255" Minimum="1" VerticalOptions="Center" IsVisible="{Binding DimmingEnabled}" Style="{StaticResource Z2XSlider}"></Slider>
                        <Label  Text="{Binding BrightnessLabelText}" VerticalOptions="Center" MinimumWidthRequest="100" WidthRequest="100" HorizontalOptions="End" HorizontalTextAlignment="End" Margin="10,0,0,0" ></Label>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV60Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA0v}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}"/>
                <VerticalStackLayout Grid.Row="3" Grid.Column="1" HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}" >
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput0frontEnabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput0frontEnabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA0r}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="4" Grid.Column="1" HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput0rearEnabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput0rearEnabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA1}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="5" Grid.Column="1" HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput1Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput1Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA2}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="6" Grid.Column="1" HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput2Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput2Enabled}"  HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="7" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA3}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="7" Grid.Column="1" HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput3Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingOutput3Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="8" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA4}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="8" Grid.Column="1" HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput4Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput4Enabled}"  HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="9" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA5}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="9" Grid.Column="1"  HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput5Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingOutput5Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="10" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA6}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="10" Grid.Column="1"  HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput6Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput6Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV114Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="11" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA7}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="11" Grid.Column="1"  HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput7Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput7Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV152Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="12" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA8}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="12" Grid.Column="1"  HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput8Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch  IsToggled="{Binding DimmingOutput8Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV152Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="13" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA9}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="13" Grid.Column="1"   HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput9Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingOutput9Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV152Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="14" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA10}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout  Grid.Row="14" Grid.Column="1"   HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout>
                        <Label Text="{Binding Path=DimmingOutput10Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingOutput10Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV152Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="15" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA11}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="15" Grid.Column="1"    HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput11Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingOutput11Enabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV152Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>

                <Label Grid.Row="16" Grid.Column="0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightBrigthnessOutputFA12}" VerticalOptions="Center"  HorizontalOptions="Start" IsVisible="{Binding DimmingEnabled}" />
                <VerticalStackLayout Grid.Row="16" Grid.Column="1"  HorizontalOptions="End" IsVisible="{Binding DimmingEnabled}">
                    <HorizontalStackLayout >
                        <Label Text="{Binding Path=DimmingOutput12Enabled,Converter={StaticResource switchStateConverter}}" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" ></Label>
                        <Switch IsToggled="{Binding DimmingOutput12Enabled}" IsVisible="{Binding DimmingEnabled}" HorizontalOptions="End"></Switch>
                    </HorizontalStackLayout>
                    <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV152Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                </VerticalStackLayout>
                    
            </Grid>
            
            </Border>

            <!-- ZIMO: Light effects in CV125 and CV126 (ZIMO_LIGHT_EFFECTS_CV125X) -->
            <Label IsVisible="{Binding ZIMO_LIGHT_EFFECTS_CV125X}" Style="{StaticResource Z2XProgrammerLabelHeading2Style}" Text="{x:Static strings:AppResources.FrameLightEffectsTitle}" VerticalOptions="Center"  HorizontalOptions="Start" />
            <Border Style="{StaticResource Z2XBorderFrame}" IsVisible="{Binding ZIMO_LIGHT_EFFECTS_CV125X}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Z2XProgrammerLabelStandardStyle}" Text="{x:Static strings:AppResources.FrameLightEffectsDescription}" VerticalOptions="Center"  HorizontalOptions="Start" Margin="0,0,100,0" />

                    <!-- ZIMO: Light effects in CV125 for function output F0 (front headlight) -->
                    <Label Grid.Row="1" Grid.Column="0" Margin="0,20,0,0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightDimmingOutputFA0v}" VerticalOptions="Center"  HorizontalOptions="Start" />
                    <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                        <Picker   Margin="0,20,0,0" ToolTipProperties.Text="{x:Static strings:AppResources.LightEffectToolip}"  ItemsSource="{Binding AvailableZIMOLightEffects}" SelectedItem="{Binding SelectedZIMOLightEffect0v}" HorizontalTextAlignment="End" MinimumWidthRequest="350" WidthRequest="350"  HorizontalOptions="End" VerticalOptions="Center"/>
                        <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV125Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                    </VerticalStackLayout>

                    <!-- ZIMO: Light effects in CV126 for rear headlight (default F0 reverse) -->
                    <Label Grid.Row="2" Grid.Column="0" Margin="0,20,0,0" Style="{StaticResource Z2XProgrammerLabelHeading3Style}" Text="{x:Static strings:AppResources.FrameLightDimmingOutputFA0r}" VerticalOptions="Center"  HorizontalOptions="Start"  />
                    <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                        <Picker  Margin="0,20,0,0" ToolTipProperties.Text="{x:Static strings:AppResources.LightEffectToolip}" ItemsSource="{Binding AvailableZIMOLightEffects}" SelectedItem="{Binding SelectedZIMOLightEffect0r}" HorizontalTextAlignment="End" MinimumWidthRequest="350" WidthRequest="350" HorizontalOptions="End" VerticalOptions="Center"/>
                        <Label IsVisible="{Binding AdditionalDisplayOfCVValues}" Text="{Binding CV126Configuration}" Style="{StaticResource Z2XProgrammerLabelAdditionalCVValuesStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
                    </VerticalStackLayout>  

            </Grid>
            </Border>

            </VerticalStackLayout>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>